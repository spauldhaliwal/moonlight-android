<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- disabled state -->
            <!--    <item android:drawable="@drawable/btn_osd_menu_disabled" android:state_enabled="false"/>-->

            <!-- enabled and pressed state -->
            <!--    <item android:drawable="?attr/selectableItemBackground" android:state_enabled="true" android:state_pressed="true"/>-->

            <!-- enabled and focused state -->
            <item
                android:drawable="@drawable/btn_osd_menu_focused_top"
                android:state_enabled="true"
                android:state_focused="true" />

            <!-- enabled state -->
            <item
                android:drawable="@drawable/btn_osd_menu_enabled"
                android:state_enabled="true" />

        </selector>
    </item>
    <item>
        <ripple android:color="#686872">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:topRightRadius="10dp"/>
                    <solid android:color="#686872"/>
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>